@model Apoteka.Models.Lijek

@{
    ViewData["Title"] = "Lijek / Detalji";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Detalji za lijek: @Model.Naziv</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Naziv)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Naziv)
                    </dd>
                    <dt class="col-sm-4">
                        Na recept
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.NaRecept == 0)
                        {
                            <span>Nije</span>
                        }
                        else
                        {
                            <span>Jeste</span>
                        }
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Cijena)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Cijena)
                    </dd>
                    <dt class="col-sm-4">
                        Količina
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Kolicina)
                    </dd>
                    <dt class="col-sm-4">
                        Dobavljač
                    </dt>
                    <dd class="col-sm-8">
                        <a href="@Url.Action("Details", "Dobavljac", new { id = @Model.DobavljacId })">@Html.DisplayFor(model => model.Dobavljac.Naziv)</a>
                    </dd>
                </dl>
                <div class="row">
                    <div class="col">
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.LijekId">Izmijeni</a>
                        <a class="btn btn-primary" asp-action="Index">Nazad na listu</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
