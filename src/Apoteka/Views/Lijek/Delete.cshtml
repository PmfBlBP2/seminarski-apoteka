@model Apoteka.Models.Lijek

@{
    ViewData["Title"] = "Lijek / Brisanje";
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Da li ste sigurni da želite obrisati ovaj lijek?</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Naziv)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Naziv)
                    </dd>
                    <dt class="col-sm-4">
                        Na recept
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.NaRecept == 0)
                        {
                            <span>Nije</span>
                        }
                        else
                        {
                            <span>Jeste</span>
                        }
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Cijena)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Cijena)
                    </dd>
                    <dt class="col-sm-4">
                        Količina
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Kolicina)
                    </dd>
                    <dt class="col-sm-4">
                        Dobavljač
                    </dt>
                    <dd class="col-sm-8">
                        <a href="@Url.Action("Details", "Dobavljac", new { id = @Model.DobavljacId })">@Html.DisplayFor(model => model.Dobavljac.Naziv)</a>
                    </dd>
                </dl>
                <div class="row">
                    <div class="col">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="LijekId" />
                            <input type="submit" value="Obriši" class="btn btn-danger" /> |
                            <a asp-action="Index">Nazad na listu</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
