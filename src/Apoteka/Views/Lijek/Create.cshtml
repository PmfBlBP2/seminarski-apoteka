@model Apoteka.Models.Lijek

@{
    ViewData["Title"] = "Lijek / Kreiranje";
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Dodaj novi lijek</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="DobavljacId" class="bmd-label-floating">Dobavljač</label>
                                <select asp-for="DobavljacId" class="form-control" asp-items="ViewBag.DobavljacId"></select>
                                <span asp-validation-for="DobavljacId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Naziv" class="bmd-label-floating"></label>
                                <input asp-for="Naziv" class="form-control" />
                                <span asp-validation-for="Naziv" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="NaRecept" class="bmd-label-floating">Da li je lijek na recept?</label>
                                <select asp-for="NaRecept" class="form-control">
                                    <option value="0">Nije</option>
                                    <option value="1">Jeste</option>
                                </select>
                                <span asp-validation-for="NaRecept" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Cijena" class="bmd-label-floating"></label>
                                <input asp-for="Cijena" class="form-control" />
                                <span asp-validation-for="Cijena" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Kolicina" class="bmd-label-floating">Količina</label>
                                <input asp-for="Kolicina" class="form-control" />
                                <span asp-validation-for="Kolicina" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <a class="btn btn-outline-primary" asp-action="Index">Nazad na listu</a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group pull-right">
                                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
