@model IEnumerable<Apoteka.Models.Kupovina>

@{
    ViewData["Title"] = "Kupovina / Korpa";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Korpa</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="text-primary">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Lijek)
                                </th>
                                <th>
                                    Količina
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Iznos) u KM
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lijek.Naziv)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Kolicina)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Iznos)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("RemoveLijek", "Kupovina", new { racunId = item.RacunId, lijekId = item.LijekId })"
                                           title="Obriši" onclick="return confirm('Da li sigurni da želite da obrišete?');">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
                <div class="row align-items-center">
                    <div class="col-7">
                        <a class="btn btn-outline-primary" href="@Url.Action("Create","Kupovina", new { racunId = ViewBag.RacunId })">Dodaj novi lijek</a>

                        @if (ViewBag.brojElemenata != 0)
                        {
                            <a class="btn btn-outline-success" href="@Url.Action("Index","Racun")">Završi kupovinu</a>
                        }

                        <a class="btn btn-outline-danger" href="@Url.Action("Discard","Kupovina", new { racunId=ViewBag.RacunId})"
                           onclick="return confirm('Da li sigurni da želite da odustanete od kupovine?');">Odustani od kupovine</a>
                    </div>
                    <div class="col-5">
                        <a style="font-size: 1.25rem; color: #9c27b0;"><strong>Ukupno: </strong> @ViewBag.Iznos KM</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


